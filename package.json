{
  "name": "frontend-mentor",
  "version": "1.0.0",
  "license": "MIT",
  "author": "p1t1ch <belobeev.kirill@gmail.com>",
  "scripts": {
    "dev": "gatsby develop -H 0.0.0.0",
    "build": "gatsby build",
    "start": "gatsby serve -H 0.0.0.0 -p 8000",
    "copy-static-queries": "cp -r ./public/page-data/sq/d ./public/static",
    "storybook": "yarn copy-static-queries && start-storybook -s public -p 8080 --ci",
    "storybook:build": "yarn copy-static-queries && build-storybook -s public -o docs",
    "storybook:start": "serve docs -l 8080",
    "test": "is-ci test:coverage test:watch",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "test:e2e": "is-ci test:e2e:run test:e2e:open",
    "pretest:e2e:run": "yarn build",
    "test:e2e:run": "server-test 8000 cy:run",
    "test:e2e:open": "start-server-and-test dev 8000 cy:open",
    "coverage": "open ./coverage/lcov-report/index.html",
    "stats": "open ./public/report.html",
    "lint": "eslint . --ext .tsx,.ts,.mdx,.js --fix",
    "prettier": "prettier --write",
    "format": "prettier . --write --ignore-path .gitignore",
    "type-check": "tsc --noEmit",
    "validate": "yarn lint && yarn format && yarn type-check && yarn test:coverage && yarn test:e2e:run",
    "clean": "gatsby clean"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn type-check"
    }
  },
  "lint-staged": {
    "*.{tsx,ts,mdx,js}": [
      "yarn lint",
      "yarn format"
    ]
  },
  "eslintIgnore": [
    "node_modules",
    "public",
    "docs",
    "coverage",
    "!.storybook"
  ],
  "browserslist": [
    "last 2 Chrome major versions",
    "last 2 Firefox major versions",
    "last 2 Safari major versions",
    "last 2 Edge major versions",
    "last 2 ChromeAndroid major versions",
    "last 2 iOS major versions"
  ],
  "dependencies": {
    "@apollo/client": "^3.3.7",
    "@svgr/webpack": "^5.5.0",
    "autoprefixer": "^10.2.1",
    "cross-fetch": "^3.0.6",
    "focus-visible": "^5.2.0",
    "gatsby": "^2.30.3",
    "gatsby-alias-imports": "^1.0.6",
    "gatsby-image": "^2.9.0",
    "gatsby-plugin-manifest": "^2.10.0",
    "gatsby-plugin-offline": "^3.8.0",
    "gatsby-plugin-postcss": "^3.5.0",
    "gatsby-plugin-react-helmet": "^3.8.0",
    "gatsby-plugin-sharp": "^2.12.2",
    "gatsby-plugin-svgr": "^2.1.0",
    "gatsby-plugin-webpack-bundle-analyser-v2": "^1.1.18",
    "gatsby-source-filesystem": "^2.9.1",
    "gatsby-transformer-sharp": "^2.10.1",
    "postcss": "^8.2.4",
    "postcss-focus-visible": "^5.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-helmet": "^6.1.0",
    "tailwindcss": "^2.0.2"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.12.7",
    "@storybook/addon-a11y": "^6.1.14",
    "@storybook/addon-essentials": "^6.1.14",
    "@storybook/react": "^6.1.14",
    "@testing-library/cypress": "^7.0.3",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.3",
    "@testing-library/user-event": "^12.6.0",
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-helmet": "^6.1.0",
    "@types/testing-library__jest-dom": "^5.9.5",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "babel-jest": "^26.6.3",
    "babel-preset-gatsby": "^0.10.0",
    "cypress": "^6.2.1",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jest-dom": "^3.6.5",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-mdx": "^1.8.2",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^3.10.1",
    "husky": "^4.3.8",
    "is-ci-cli": "2.2.0",
    "jest": "^26.6.3",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "serve": "^11.3.2",
    "start-server-and-test": "^1.11.7",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": ">= 10.14.2"
  }
}
